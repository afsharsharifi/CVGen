{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "$" : true,
        "jQuery" : true,
        "Model" : true,
        "persianDate" : true,
        "__VERSION__": true
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-case-declarations":0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}